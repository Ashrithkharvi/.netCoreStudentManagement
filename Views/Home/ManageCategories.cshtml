@model IEnumerable<Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Categories</h2>
<a class="btn btn-primary" asp-action="AddCategory">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
